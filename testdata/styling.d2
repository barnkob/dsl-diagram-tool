# Comprehensive styling test

# Fill colors
red: Red Box {
  style.fill: "#ff0000"
}

blue: Blue Box {
  style.fill: "#0000ff"
}

green: Green Box {
  style: {
    fill: "#00ff00"
    stroke: "#006600"
    stroke-width: 3
  }
}

# Typography
bold_text: Bold {
  style.bold: true
}

italic_text: Italic {
  style.italic: true
}

underline_text: Underlined {
  style.underline: true
}

# Font sizing and colors
large: Large Text {
  style: {
    font-size: 24
    font-color: purple
  }
}

small: Small Text {
  style: {
    font-size: 8
    font-color: gray
  }
}

# Effects
shadow_box: With Shadow {
  style: {
    shadow: true
    border-radius: 10
  }
}

transparent: Semi-Transparent {
  style: {
    opacity: 0.5
    fill: yellow
  }
}

# 3D effect
cube: 3D Box {
  style: {
    3d: true
    fill: orange
  }
}
